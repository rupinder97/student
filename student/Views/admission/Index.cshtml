@model IEnumerable<student.Models.admission_tbl>

@{
    ViewBag.Title = "Admisiion";
}
<div class="container">
    <div class="col-lg-12">
        <h2>Admission</h2>

        <p>
            @Html.ActionLink("New Admission", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    <b>Id No</b>
                </th>
                <th>
                    <b>Student Name</b>
                </th>
                <th>
                    <b>Father's Name</b>
                </th>
                <th>
                    <b>Contact No.</b>
                </th>
                
                <th>
                    Fee Received
                </th>
                <th>
                    <b>Date of Admission</b>
                </th>
                <th>
                    <b>Gender</b>
                </th>
                <th>
                    <b>Course Name</b>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contactno)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.rcvd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.courses_tbl.course)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.rollno }) |
                        @Html.ActionLink("Details", "Details", new { id = item.rollno }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.rollno })
                    </td>
                </tr>
            }

        </table>
        </div></div>