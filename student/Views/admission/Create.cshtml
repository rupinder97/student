@model student.Models.admission_tbl

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <div class="col-lg-10">
        <h2>Add New Admission</h2>


        @using (Html.BeginForm("drop","admission",FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-4">Roll No</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.rollno, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.rollno, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Course Name</div>
                    <div class="col-md-6">
                        @Html.DropDownList("course", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.course, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Student Name</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Father's Name</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.fname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Contact No.</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.contactno, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.contactno, "", new { @class = "text-danger" })
                    </div>
                </div>

              
                <div class="form-group">
                    <div class="col-md-4">Fee Received</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.rcvd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.rcvd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Date of Admission(YYYY-MM-DD)</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.doa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.doa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Gender</div>
                    <div class="col-md-6">
                        @Html.RadioButton("Gender","Male") Male @*, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.RadioButton("Gender", "Female") Female @*, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-6">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>

        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
