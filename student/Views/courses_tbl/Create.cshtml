@model student.Models.courses_tbl

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <div class="col-lg-10">
        <h2>Add New Course</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-4">Course Name</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.course, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.course, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Admission Fee</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.admfee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.admfee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">First Quarter</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.fq_fee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fq_fee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Second Quarter</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.sq_fee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sq_fee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Third Quarter</div>   <div class="col-md-6">
                        @Html.EditorFor(model => model.tq_fee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tq_fee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">Fourth Quarter</div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.frthq_fee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.frthq_fee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-6">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
