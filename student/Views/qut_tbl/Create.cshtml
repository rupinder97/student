@model student.Models.qut_tbl

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <div class="col-lg-10">

    
<h2>Fee Deposite</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            <div class="col-md-4">Course Name</div>
            <div class="col-md-6">
                @Html.DropDownList("rollno", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.rollno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">Quarter </div>
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.q_fee, new List<SelectListItem>
     {

         new SelectListItem {Text="First Quarter",Value="1" },
          new SelectListItem {Text="Second Quarter",Value="2" },
           new SelectListItem {Text="Third Quarter",Value="3" },
            new SelectListItem {Text="Fourth Quarter",Value="4" },

     }, "--Select Session--", new { @class = "form-control" })
                
                
                @Html.ValidationMessageFor(model => model.q_fee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          
            <div class="col-md-4"> Fee Received</div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.rcvd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rcvd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">Date of Received(YYYY-MM-DD)</div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.dor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-6">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
        </div></div>
